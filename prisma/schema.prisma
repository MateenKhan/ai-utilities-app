// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  bookmarks         Bookmark[]
  todos             Todo[]
  todoStates        TodoState[]
  calculatorHistory CalculatorHistory[]
  calculatorState   CalculatorState?
  imageTileProjects ImageTileProject[]
}

model Bookmark {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  folder      String?  // Optional folder/category for organization
  tags        String[] // Array of tags for better categorization
  description String?  // Optional description
  favicon     String?  // Optional favicon URL
  userId      Int      // Foreign key to User
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([folder])
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  note        String?
  status      String   @default("todo")
  data        Json?    // Stores documents array, amazonLink, etc.
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model TodoState {
  id        String   @id @default(uuid())
  value     String
  label     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, value])
}

model CalculatorHistory {
  id         String   @id @default(uuid())
  expression String
  result     String
  timestamp  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp(sort: Desc)])
}

model CalculatorState {
  id     String @id @default(uuid())
  data   Json   // Stores display, memory, activeView, etc.
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ImageTileProject {
  id        String   @id @default(uuid())
  name      String?
  data      Json     // Stores config, tile dimensions, etc. (Avoid huge images if possible)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
